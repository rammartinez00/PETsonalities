extends layout
block content
    form(action="/users/:id/edit" method="post")
    input(type="hidden" name="_csrf" value=csrfToken)
    div
      label(for="profilePicture") Profile Picture:
      input(type="text" name="profilePicture" value=user.profilePicture)
    div
      label(for="banner") Banner:
      input(type="text" name="banner" value=user.banner)
    div
      label(for="websiteLink") Website Link:
      input(type="text" name="websiteLink" value=user.websiteLink)
    div
      button(type="submit") Submit
