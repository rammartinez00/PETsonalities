doctype html
html
  head
      block head
        title #{title}
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/navbar.css')
        //- link(rel="icon" type="image/png" href='/assets/images/paw.ico')
        link(rel="icon" type="image/png" href="https://icons-for-free.com/iconfiles/png/512/paw-1326548861677045856.png")

  body
    nav(class='navbar')
      a( href='/') Petsonalities
      form(action="/" method="post")
        input(type="text" placeholder= 'Search')
        //- button(type="submit") Search
      ul(class='navbar-nav')
      if locals.authenticated
        li.prof: a( href=`/users/${user.id}`) Profile
        div(): a(href='/pets/new') Create Pet Page
        span() Welcome #{user.fullName}!
        form( action='/users/logout' method='post')
          button(class='btn btn-sm btn-warning' type='submit') Logout
      else
        span(class='navbar-text px-4')
        a( href='/users/login') Login
        a( href='/users/signup') Sign Up
    block content
