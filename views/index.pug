extends layout

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  //- link(rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png")
  //- add page specific js
  script(src="/javascripts/index.js" type="module" defer)

block content
  h1 CHECK OUT THESE CUTE PETS
  ul
    each pet in pets 
      li
        div(style="display:flex; margin:25px; box-sizing:content-box; border: 2px solid red; border-radius:25px; background-color:lavender;")
          img(id='image' src=pet.image style="width:400px; border-radius:50%")
          div(id= "name" style="font-weight:bold; padding:10px;")= pet.name 
          span(id='description')= pet.description 

          