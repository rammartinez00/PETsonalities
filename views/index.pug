extends layout

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  //- link(rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png")
  //- add page specific js
  script(src="/javascripts/petLikes.js" type="module")

block content
  h1 CHECK OUT THESE CUTE PETS

  div(id="firstContainer" class="element")
    div(id="petsContainer" class="element")
      each pet, index in pets
        div(id= `outside-box-${index}` style="display:flex; margin:25px; border:2px solid #05386B; border-radius:15px 50px; background-color:#5cdb95;color:#EDF5E1 ")
          a(href=`/pets/${pet.id}`)
            img(id='image' src=pet.image style="width:150px; border-radius:50%")
          span(id= "name" style="font-weight:bold; padding:10px")= pet.name
          span(id='description' style="font-weight:normal; box-sizing:content-box")= pet.description
          div(id="likes")= `Like:${pet.PetLikes.length}`
            span(id="likes-value")
