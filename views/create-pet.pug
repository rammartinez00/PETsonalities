extends layout

include utils

block content 
    +validationErrorSummary(errors)
    form(action="/pets/new" method="post")
        input(type="hidden" name="_csrf" value=csrfToken)
        div 
        label(for="name") Name:
        input(type="text" name="name" value=pet.name required)
        div 
        label(for="description") Description:
        textarea(name="description" value=pet.description required)
        div 
        label(for="image") Image:
        input(type="file" name="image" value=pet.image required)
        div 
        label(for="birthday") Birthday:
        input(type="date" name="password" value=pet.birthday)
        div 
        input(type="hidden" name="userId" value=user.id)
        div 
        button(type="submit") Submit