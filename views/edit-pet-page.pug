extends layout
include utils
append head
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Luckiest+Guy")
    link(rel="stylesheet" href="/stylesheets/create-pet.css")
    script(src='/javascripts/edit-pet.js' type='module')
block content
    +validationErrorSummary(errors)
    div(id="firstContainer")
        form(action=`/pets/${pet.id}/edit` method="post" id="form")
            input(type="hidden" name="_csrf" value=csrfToken)
            input(type="hidden" name="userId" value=user.id)
            div 
            label(for="name" class="name") Name:
            input(type="text" name="name" value=pet.name required)
            div 
            label(for="description" class="name") Description:
            textarea(name="description" required)= pet.description
            div 
            label(for="image" class="name") Image:
            input(type="text" name="image" required value=pet.image)
            div 
            label(for="birthday" class="name") Birthday:
            input(type="date" name="birthday" value=pet.birthday required)
            div 
            label(for='petTypeId' class="name") Pet Type:
            select(name='petTypeId')
                each petType in petTypes 
                    option(value=petType.id selected=(parseInt(petType.id) === parseInt(pet.petTypeId)))= petType.type
            button(type="submit") Submit Changes 
            a(href=`/pets/${pet.id}`)
                button(id='edit-btn') Cancel