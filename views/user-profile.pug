extends layout
block content
  script(src='/javascripts/profile.js' type='module')
  div.profileInfoBox
    img(src="https://www.clipartmax.com/png/full/42-427582_sign-in-my-profile-icon-png.png", style="width:100px")
    div.profileDetails
      label(for="Snarls Barkley") Name:
      h2(name="Snarls Barkley")=user.fullName
      h4=user.id
      p Biography
      a(href=user.websiteLink)
      a(href=`/users/${user.id}/edit`)
        button() Edit Profile
  div.tables
    a(href=`/users/${user.id}`).likes Pet Likes
    a(href=`/users/${user.id}`).tags Tags
    a(href=`/users/${user.id}`).collections Collections
    a(href=`/users/${user.id}`).pets Pets
    a(href=`/users/${user.id}`).comments Comments

  div.dataTables
    table.petLikes
      thead
        tr
          th Pet Likes
      tbody
          td displays user likes
    table.collectionsTable
      thead
        tr
          th Collections
      tbody
          td displays user's collection
    table.petsTable
      thead
        tr
          th Pets
      tbody
          td displays user pets
    table.commentsTable
      thead
        tr
          th Comments
      tbody
          td displays user comments
