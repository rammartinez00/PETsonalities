extends layout

append head
  link(rel="stylesheet" href="/stylesheets/profile.css")
  script(src='/javascripts/profile.js' type='module')

block content
  div(style=`background-image: url(${userProfile.banner});`).profileInfoBox
    img(src=userProfile.profilePicture, style="width:20%; height:75%; border-radius: 50%;")
    div.profileDetails
      label(for="userName")
      h2(name="userName")=`Name: ${userProfile.fullName}`
      h4=`User ID: ${userProfile.id}`
      p=`Biography: ${userProfile.bio}`
      a(href=`Website Link${userProfile.websiteLink}`) Test
      if (user)
        if(user.id === id)
          a(href=`/users/${userProfile.id}/edit`)
            button() Edit Profile
  div.tables
    a(href=`/users/${userProfile.id}`).likes Pet Likes
    a(href=`/users/${userProfile.id}`).collections Collections
    a(href=`/users/${userProfile.id}`).pets Pets
    a(href=`/users/${userProfile.id}`).comments Comments

  div.dataTables
    table.petLikes
      thead
        tr
          th Pet Likes
      tbody
          td displays userProfile likes
    div(style="margin-top:20px; width:50%;").petsTable
      each pet in userPets
        div(style="display:flex; margin:25px; box-sizing:content-box; border: 2px solid green; border-radius:25px; background-color:lavender;")
          a(href=`/pets/${pet.id}`)
            img(src=pet.image style="width:100px; border-radius:50%;")
          div(style="font-weight:bold; padding:10px;")= pet.name
    table.commentsTable
      thead
        tr
          th Comments
      tbody
          td displays userProfile comments
